<p id="notice"><%= notice %></p>

<h1>Sightings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Animal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.date %></td>
        <td><%= sighting.time %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.longitude %></td>
        <td><%= sighting.animal %></td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sighting', new_sighting_path %>


<p>
  <!-- Input area for new sighting -->
  <div class="field">
    <label for="sighting_name">Name</label><br>
    <input type="text" name="sighting[name]" id="sighting_name" />
  </div>
  <div class="field">
    <label for="sighting_region">Vintage</label><br>
    <select id="sighting_region" name="sighting[region]">
      <option value="North America" selected="selected">North America</option>
      <option value="South America">South America</option>
      <option value="Europe">Europe</option>
    </select>
  </div>
  <input type="hidden" name="sighting[animal_id]" id="animal_id" value="<%=@animal_id%>"/>
  <button id="add_new_sighting_button">Add New Sighting</button>
</p>
