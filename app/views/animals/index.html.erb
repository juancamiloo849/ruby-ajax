<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id='animal_list'>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td id='edit'><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- <%= link_to 'New Animal', new_animal_path %> -->

<p>
  <!-- Input area for new wine -->
  <div class="field">
    <label for="animal_name">Name</label><br>
    <input type="text" name="animal[name]" id="animal_name" />
  </div>
  <div class="field">
    <label for="animal_latin_name">Latin Name</label><br>
    <input type="text" name="animal[latin_name]" id="animal_latin_name" />
  </div>
  <div class="field">
    <label for="animal_kingdom">Kingdom</label><br>
    <input type="text" name="animal[kingdom]" id="animal_kingdom" />
  </div>
  <button id="add_new_animal_button">Add New Animal</button>
</p>
